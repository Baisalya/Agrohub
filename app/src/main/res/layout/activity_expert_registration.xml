<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/green"
    tools:context=".loginsignup.ExpertRegistration">
    <TextView
        android:id="@+id/logintitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="Sign Up"
        android:textColor="@android:color/background_light"
        android:textSize="30dp"
        android:textStyle="bold"></TextView>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#30ffffff"
        android:hint="Organization Name"
        android:layout_below="@+id/logintitle"
        android:drawableLeft="@drawable/baseline_language_24"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/contactinfo_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#30ffffff"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/email_edit_text"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:inputType="textEmailAddress" />


    <EditText
        android:id="@+id/location_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#30ffffff"
        android:layout_marginTop="5dp"
        android:hint="Email Address"
        android:drawableLeft="@drawable/baseline_mail_outline_24"
        android:drawablePadding="20dp"
        android:layout_below="@+id/contactinfo_edit_text"/>

    <TextView
        android:id="@+id/expertise_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_edit_text"
        android:textSize="15dp"
        android:text="Areas of expertise:" />

    <RadioGroup
        android:id="@+id/expertise_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expertise_text_view">

        <RadioButton
            android:id="@+id/crop_management_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crop management"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/livestock_production_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Livestock production"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/soil_fertility_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soil fertility"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/irrigation_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Irrigation"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/pest_control_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pest control"
            android:padding="5dp"/>

        <RadioButton
            android:id="@+id/farm_economics_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Farm economics" />

    </RadioGroup>


    <EditText
        android:id="@+id/education_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#30ffffff"
        android:layout_marginTop="5dp"
        android:hint="Education Qualification"
        android:drawableLeft="@drawable/baseline_library_books_24"
        android:drawablePadding="20dp"
        android:layout_below="@+id/expertise_radio_group"
        />


    <EditText
        android:id="@+id/password_Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#30ffffff"
        android:layout_marginTop="5dp"
        android:hint="Password"
        android:layout_below="@+id/education_edit_text"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="20dp"
        android:inputType="textPassword" />
    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_below="@+id/password_Edit_Text"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:padding="8dp"
        android:background="@color/btn"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>

</RelativeLayout>